#define VEH mlnrviii

SPR_PUR(ID(spr_pur), "build/mlnrviii_front.png")
SPR(ID(spr_front), "build/mlnrviii_front.png", 5)
SPR(ID(spr_middle), "build/mlnrviii_middle.png", 5)
SPR(ID(spr_rear), "build/mlnrviii_rear.png", 5)

SWITCH(ID(sw_arti), extra_callback_info1,
    1..2: ID(item);
    CB_RESULT_NO_MORE_ARTICULATED_PARTS;
)
SWITCH(ID(sw_cst), cargo_subtype,
    0: string(STR_SUBTYPE_LIVERY_2CC);
    1: string(STR_SUBTYPE_LIVERY_REALISTIC);
    CB_RESULT_NO_TEXT;
)
SWITCH(ID(sw_gfx), position_in_consist,
    0: ID(spr_front);
    1: ID(spr_middle);
    2: ID(spr_rear);
)

PROPS_COMMON(ID(item))
PROPS(ID(item),
    cargo_capacity: 25;
    cost_factor: 0;
    introduction_date: date(0,01,01);
    length: 5;
    name: string(STR_NAME_MLNRVIII);
    model_life: VEHICLE_NEVER_EXPIRES;
    power: 500hp;
    running_cost_factor: 0;
    speed: 80km/h;
    weight: 10ton;
)
GFX(ID(item),
    articulated_part: ID(sw_arti);
    cargo_subtype_text: ID(sw_cst);
    colour_mapping: sw_recolour_hkl;
    default: ID(sw_gfx);
    purchase: ID(spr_pur);
)

#undef VEH
