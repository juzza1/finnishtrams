CC_FLAGS += -I .

PREVIEW := $(BUILD_DIR)/props.html

XCFP := xcf2png
XCFP_FLAGS := --autocrop --background \\\#FFFFFF --dissolve --output

all: $(PREVIEW)
$(PREVIEW): $(NML_FILE)
	tools/props-to-html $< $@

VEHS := $(wildcard src/pnml/vehs/*.pnml)

GFX_DEP := $(BUILD_DIR)/gfx.dep
$(call INCLUDE_NOCLEAN, $(GFX_DEP))
$(GFX_DEP): $(VEHS)
	tools/make-expander $^ > $@

build/include_vehs.pnml: $(VEHS)
	> $@
	for f in $^ ; do \
            echo "#include \"$$f\"" >> $@ ; \
        done
